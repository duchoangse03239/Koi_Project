    <script type="text/javascript">
        $("#btnSubmit")
            .click(function () {
                GetInfo();
            });

        function GetInfo() {
            $.ajax({
                type: "POST",
                url: "@(Url.Content("~/KOI/TestAddd"))",
                datatype: "JSON",
                data: {
                    oldPass: $("#KoiName").val(),
                    newPass: $("#DoB").val()  
                },
                success: function(returndata) {
                    if (returndata.result) {
                        window.location.href = "Index/1";

                    }
            }
            });// end ajax
        }
    </script>

