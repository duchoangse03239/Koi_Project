    function SentMessage(parameter1) {
        var content = $('#content').val();
        $('#lbl_Content_fail').text("");

        $.ajax({
            type: "POST",
            url: "@Url.Action("SentMessage")",
            datatype: "JSON",
            data: {
                koiId: parameter1,
                content: content,
                ToMember: @owner.Member.MemberID,
            },
            success: function (res) {
                switch (res.Status) {
                    case 2:
                        $('#lbl_username_fail').text(res.Message);
                        $('#username').focus();
                        break;
                    case 3:
                        $('#lbl_username_fail').text(res.Message);
                        $('#username').focus();
                        break;
                    case 1:
                        alert(res.Message);
                        // Declare a proxy to reference the hub.
                        var notifications = $.connection.notificationsHub;
                        // Create a function that the hub can call to broadcast messages.
                        $.connection.hub.start()
                            .done(function () {
                                notifications.server.sendNotification(res.JsonObject, "doi chu", "koi");
                            });
                        window.location.reload();
                        break;
                }
            }
        }); // end ajax
    }

    function ReportKoi(parameter1) {
        var content = $('#contentReport').val();
        $('#lbl_Report_fail').text("");

        $.ajax({
            type: "POST",
            url: "@Url.Action("ReportKoi","Report")",
            datatype: "JSON",
            data: {
                koiId: parameter1,
                content: content,
            },
            success: function (res) {
                switch (res.Status) {
                    case 2:
                        $('#lbl_username_fail').text(res.Message);
                        $('#username').focus();
                        break;
                    case 3:
                        $('#lbl_username_fail').text(res.Message);
                        $('#username').focus();
                        break;
                    case 1:
                        alert(res.Message);
                        // Declare a proxy to reference the hub.
                        var notifications = $.connection.notificationsHub;
                        // Create a function that the hub can call to broadcast messages.
                        $.connection.hub.start()
                            .done(function () {
                                notifications.server.sendNotification(res.JsonObject, "doi chu", "koi");
                            });
                        window.location.reload();
                        break;
                }
            }
        }); // end ajax
    }

    function ChangeOwner(parameter1) {
        var username = $('#username').val();
        $('#lbl_username_fail').text("");

        if (confirm("Bạn có chắc chắn muốn đổi chủ?")) {

            $.ajax({
                type: "POST",
                url: "@Url.Action("ChangeOwner")",
                datatype: "JSON",
                data: {
                    koiId: parameter1,
                    username: username
                },
                success: function (res) {
                    switch (res.Status) {
                        case 2:
                            $('#lbl_username_fail').text(res.Message);
                            $('#username').focus();
                            break;
                        case 3:
                            $('#lbl_username_fail').text(res.Message);
