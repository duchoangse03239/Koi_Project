@using KoiManagement.Common
@model KoiManagement.Models.Koi

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Layout/KoiLayout.cshtml";
}

<body>
    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Thêm bố - mẹ cho cá</h4>
                </div>
                <div class="modal-body">
                    <div>
                        <label>Cá Koi: <span style="color:red;">Koi0000001</span></label>
                    </div>
                    <div>
                        <label>Cá Mẹ: </label>
                        <input style="width:auto;" type="text" placeholder="Nhập ID cá mẹ" name="koi_parent"/>
                        <a href="#" class="btn btn-primary btn-sm">Tìm kiếm</a>
                    </div>
                </div>
                <div class="modal-result">
                    <div class="content-section-a">
                        <input type="hidden" id="koiID" name="koiID" value="#">
                        <div class="row">
                            <div class="col-md-4">
                                <img class="img-koi-list " src="/Content/Image/Koi/Asagi1.jpg" alt="">
                            </div>
                            <div class="col-md-5">
                                <p class="title-koi-name">Asagi1</p>
                                <div class="ratings">
                                    <a style="text-decoration: none;" href="#">
                                        <span class="glyphicon glyphicon-star"></span>
                                        <span class="glyphicon glyphicon-star"></span>
                                        <span class="glyphicon glyphicon-star"></span>
                                        <span class="glyphicon glyphicon-star"></span>
                                        <span class="glyphicon glyphicon-star"></span>
                                    </a>
                                </div>
                                <h4 style="margin-top:25px;" class="">
                                    Chủ sở hữu: Ruby Koi
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary ">Lưu</button>
                    <button type="button" class="btn btn-primary " data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
<div class="section site-main">
    <div class="container">
        <div class="koi-detail">
            <div class="row">
                <div class="col-md-5 col-md-offset-1">
                    <div class="image-slider">
                        
                        <div id="jssor_1" style="position: relative; margin: 0 auto; top: 0px; left: 0px; width: 300px; height: 456px; overflow: hidden; visibility: hidden; background-color: #24262e;">
                            <!-- Loading Screen -->
                            <div data-u="loading" style="position: absolute; top: 0px; left: 0px;">
                                <div style="filter: alpha(opacity=70); opacity: 0.7; position: absolute; display: block; top: 0px; left: 0px; width: 100%; height: 100%;"></div>
                                <div style="position: absolute; display: block; background: url('images/loading.gif') no-repeat center center; top: 0px; left: 0px; width: 20%; height: 100%;"></div>
                            </div>
                            <div data-u="slides" style="cursor: default; position: relative; top: 0px; left: 0px; width: 300px; height: 375px; overflow: hidden;">
                                <div data-p="144.50">
                                    <img data-u="image" src="~/Content/Image/Koi/@Model.Image"/>
                                    <img data-u="thumb" src="~/Content/Image/Koi/@Model.Image"/>
                                </div>
                                <div data-p="144.50" style="display: none;">
                                    <img data-u="image" src="~/Content/Image/Koi/koi02.jpg"/>
                                    <img data-u="thumb" src="~/Content/Image/Koi/koi02.jpg"/>
                                </div>

                            </div>
                            <!-- Thumbnail Navigator -->
                            <div data-u="thumbnavigator" class="jssort01" style="position: absolute; left: 0px; bottom: 0px; width: 300px; height: 80px;" data-autocenter="1">
                                <!-- Thumbnail Item Skin Begin -->
                                <div data-u="slides" style="cursor: default;">
                                    <div data-u="prototype" class="p">
                                        <div class="w">
                                            <div data-u="thumbnailtemplate" class="t"></div>
                                        </div>
                                        <div class="c"></div>
                                    </div>
                                </div>
                                <!-- Thumbnail Item Skin End -->
                            </div>
                            <!-- Arrow Navigator -->
                            <span data-u="arrowleft" class="jssora05l" style="top: 158px; left: 8px; width: 40px; height: 40px;"></span>
                            <span data-u="arrowright" class="jssora05r" style="top: 158px; right: 8px; width: 40px; height: 40px;"></span>
                        </div>
                        <!-- #endregion Jssor Slider End -->
                    </div>
                    <div class="fb-like" data-href="https://localhost:44304/Koi/Details/2/" data-layout="standard" data-action="like" data-size="small" data-show-faces="true" data-share="true"></div>
                    <div class="fb-comments" data-href="https://localhost:44304/Koi/Details/@Model.KoiID" data-numposts="5"></div>
                </div>
                <div class="col-md-5">
                    <div class="item">
                        <div class="item-attr">
                            <div class="line item-name">
                                <h1>@Model.KoiName</h1>
                            </div>
                            <div class="line">
                                <label><span class="fa fa-cubes"></span> Chủng loại:</label> <span>@Model.Variety.VarietyName</span>
                            </div>
                            <div class="line">
                                <label><span class="fa fa-bell"></span> Ngày sinh:</label> <span>@(Model.DoB != null ? Model.DoB.Value.ToString("dd/MM/yyyy") : "Chưa biết")</span>
                            </div>
                            <div class="line">
                                <label><span class="fa fa-adjust"></span> Giới tính:</label> <span>@Model.Gender</span>
                            </div>
                            <div class="line">
                                <label><span class="fa fa-bullseye"></span> Nguồn gốc:</label> <span>@Model.Origin</span>
                            </div>
                            <div class="line">
                                <label><span class="fa fa-hand-rock-o"></span> Tính cách:</label> <span>@Model.Temperament</span>
                            </div>
                            <div class="line">
                                <label><span class="fa fa-user"></span> Bố - Mẹ:</label>
                                 <span><a style="text-decoration:underline;" href="#" data-toggle="modal" data-target="#myModal">Thêm bố - mẹ</a></span>
                            </div>
                            <div class="line">
                                <label><span class="fa fa-home"></span> Chủ sở hữu:</label> <span>@ViewBag.Owner</span>
                            </div>
                            <div class="line">
                                <label><span class="fa fa-trophy"></span> Thành tích:</label> <a href="#">Chi tiết <span class="fa fa-angle-double-right"></span></a>
                            </div>
                            <div class="line">
                                <label><span class="fa fa-clock-o"></span> Thông tin sinh trưởng:</label> <a href="@Url.Action("timeline/"+@Model.KoiID, "InfoDetail")">Chi tiết <span class="fa fa-angle-double-right"></span></a>
                            </div>
                            <div class="line">
                                <a href="#" class="btn btn-embossed btn-primary">Báo cáo vi phạm</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>


<script src="~/Scripts/slider.js"></script>
<script src="~/Scripts/jssor.slider-21.1.6.mini.js"></script>
