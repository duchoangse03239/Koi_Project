@using KoiManagement.Models

@{
    ViewBag.Title = "ListKoiFarm";
    Layout = "~/Views/Layout/KoiLayout.cshtml";
    List <KoiFarm> ListKoiFarm = ViewBag.ListKoiFarm;
    if (ListKoiFarm == null)
    {
        throw new ArgumentNullException("ListKoiFarm");
    }
    List<string> listVariety = ViewBag.listVariety;
}

<style type="text/css">
    .img-farm-list {
        height: 250px;
        width: 250px;
    }

    .button-header {
        padding-bottom: 10px;
        margin: 40px 0 20px;
    }
</style>

<div class="container">
    <div class="button-header text-right">
        <a class="btn btn-success" href="#">Tạo trang trại</a>
    </div>
@for (int item = 0; item < ListKoiFarm.Count; item++)
{
    <div class="content-section-a">

        <div class="row container">
            <div class="col-md-3">
                <img class="img-farm-list" src="/Content/Image/Member/@ListKoiFarm.ElementAt(item).Member.Image" alt="">
            </div>
            <div class="col-md-6">
                <a class="title-koi-name" href="@Url.Action("KoiFarm/"+ @ListKoiFarm.ElementAt(item).KoifarmID, "KoiFarm")">@ListKoiFarm.ElementAt(item).FarmName</a>
                <h4 class="">
                    Chủ trang trại: <a href="/Account/profile/@ListKoiFarm.ElementAt(item).MemberID">@ListKoiFarm.ElementAt(item).Member.Name</a>
                </h4>
                <h4>Địa chỉ:@ListKoiFarm.ElementAt(item).Address</h4>
                <h4>Chủng loại chính:@listVariety.ElementAt(item)</h4>
                <a class="btn btn-embossed btn-primary" href="" role="button">Xem thêm</a>
            </div>
            <div class="col-md-3">
                <div class="ratings align-right">
                    <a>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                    </a>
                    <br />
                    <br />
                    <a href="#"> đánh giá</a>
                </div>
            </div>
        </div>

        </div>
        }
</div>