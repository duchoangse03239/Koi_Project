<script>
    function DeleteDetail(parameter1) {
        if (confirm("Bạn có chắc chắn muốn xóa?")) {
            $.ajax({
                type: "POST",
                url: "@Url.Action("DeleteConfirmed")",
                datatype: "JSON",
            data: {
