<script>
    __RequestVerificationToken = '@token';
    $(document).ready(function () {
        $.ajaxSetup({
            data: {
                __RequestVerificationToken: $("input[name=__RequestVerificationToken]").val()
            }
        });

    });

    function DisableAjaxProcessing() {
        __ShowAjaxProcessing = false;
    }

</script>